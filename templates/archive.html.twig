{% extends 'partials/base.html.twig' %}
{% block content %}
    {% include 'partials/navbar.html.twig' %}
    <div class="inner">
        <section class="subscribe-form">
            <h3 class="subscribe-form-title"> — {{ page.title }} — </h3>
            <ul class="none">
                {% set this_year = "now"|date('Y') %}
                {% set last_year = this_year - 1 %}
                {% for post in page.find('/blog').children.dateRange('01/01/' ~ last_year, '12/31/' ~ this_year).order('date', 'desc') %}
                    <li class="recent-posts flexbox-container">
                        <span>{{ post.date|date(system.pages.dateformat.short) }}</span>
                        <span>
                        <strong>
                            <a href="{{ post.url }}">{{ post.title }}</a>
                        </strong>
                    </span>
                    </li>
                {% endfor %}
            </ul>
        </section>
    </div>
{% endblock %}
